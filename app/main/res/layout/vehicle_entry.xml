<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/spacing_large"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fill the information below"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_downarrow" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_10" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"

        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivType"
            style="@style/EditTextIcon"
            android:src="@drawable/ic_home" />
        <View
            android:id="@+id/vType"
            style="@style/EditTextView"
            android:layout_toRightOf="@id/ivType"/>
        <EditText
            android:id="@+id/etType"
            style="@style/EditTextEditText"
            android:layout_toRightOf="@id/vType"
            android:hint="যানবাহনের ধরণ"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBrand"
            style="@style/EditTextIcon"
            android:src="@drawable/ic_home" />
        <View
            android:id="@+id/vBrand"
            style="@style/EditTextView"
            android:layout_toRightOf="@id/ivBrand"/>
        <EditText
            android:id="@+id/etBrand"
            style="@style/EditTextEditText"
            android:layout_toRightOf="@id/vBrand"
            android:hint="ব্রান্ডের নাম"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"

        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivModel"
            style="@style/EditTextIcon"
            android:src="@drawable/ic_home" />
        <View
            android:id="@+id/vModel"
            style="@style/EditTextView"
            android:layout_toRightOf="@id/ivModel"/>
        <EditText
            android:id="@+id/etModel"
            style="@style/EditTextEditText"
            android:layout_toRightOf="@id/vModel"
            android:hint="মডেল"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"

        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivRegNo"
            style="@style/EditTextIcon"
            android:src="@drawable/ic_home" />
        <View
            android:id="@+id/vRegNo"
            style="@style/EditTextView"
            android:layout_toRightOf="@id/ivRegNo"/>
        <EditText
            android:id="@+id/etRegNoName"
            style="@style/EditTextEditText"
            android:layout_toRightOf="@id/vRegNo"
            android:hint="রেজিস্ট্রেশন নম্বর"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"

        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivuser"
            style="@style/EditTextIcon"
            android:src="@drawable/ic_user" />
        <View
            android:id="@+id/vuser"
            style="@style/EditTextView"
            android:layout_toRightOf="@id/ivuser"/>
        <EditText
            android:id="@+id/etUserName"
            style="@style/EditTextEditText"
            android:layout_toRightOf="@id/vuser"
            android:hint="ইঞ্জিন নম্বর"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btnEntryInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@color/colorAccent"
        android:text="Done"
        android:textColor="@android:color/white" />
</LinearLayout>