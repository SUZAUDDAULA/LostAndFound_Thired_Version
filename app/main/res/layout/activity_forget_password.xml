<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgetPasswordActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:visibility="gone"
            android:id="@+id/tvHelpfp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/bg_rounded_corners_red"
            android:layout_gravity="end"
            android:text="@string/help"
            android:layout_margin="5dp"
            android:drawableRight="@drawable/ic_help"
            android:drawableTint="@android:color/holo_red_dark"
            android:textSize="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />

        <include layout="@layout/forget_password_stepper"
            />
        <FrameLayout
            android:id="@+id/fpFregmentContainer"
            android:layout_marginTop="15dp"
            android:background="@drawable/card_backgound"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>