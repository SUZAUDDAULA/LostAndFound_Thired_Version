<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llnid"
        android:layout_margin="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rrNid"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"

            android:background="@android:color/white"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivPhn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_phn"
                android:background="@color/colorPrimary"/>
            <View
                android:id="@+id/vPhn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="5dp"
                android:rotation="45"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivPhn"
                android:background="@color/colorPrimary"/>
            <EditText
                android:id="@+id/etPhn"
                android:layout_toRightOf="@id/vPhn"
                android:hint="@string/phnno"
                android:paddingStart="10dp"
                android:inputType="phone"
                android:background="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rrEmail"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"

            android:background="@android:color/white"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivEmail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_mail"
                android:background="@color/colorPrimary"/>
            <View
                android:id="@+id/vEmail"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="5dp"
                android:rotation="45"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivEmail"
                android:background="@color/colorPrimary"/>
            <EditText
                android:id="@+id/etEmail"
                android:layout_toRightOf="@id/vEmail"
                android:hint="@string/email"
                android:paddingStart="10dp"
                android:inputType="textEmailAddress"
                android:background="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rrPassWord"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivpass"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_lock"
                android:background="@color/colorPrimary"/>
            <View
                android:id="@+id/vpass"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="5dp"
                android:rotation="45"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivpass"
                android:background="@color/colorPrimary"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_toRightOf="@id/vpass"
                android:background="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:maxLength="6"
                android:hint="@string/password"
                android:inputType="textPassword"/>
            <ImageView
                android:id="@+id/ivpassShow"

                android:layout_toRightOf="@id/etPassword"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-40dp"
                android:padding="5dp"
                android:src="@drawable/ic_view"
                android:tint="@color/colorPrimaryDark"
                android:background="@android:color/white"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rrConfirmPassWord"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"

            android:background="@android:color/white"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivConfirmPassWord"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_lock"
                android:background="@color/colorPrimary"/>
            <View
                android:id="@+id/vConfirmPassWord"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="5dp"
                android:rotation="45"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivConfirmPassWord"
                android:background="@color/colorPrimary"/>
            <EditText
                android:id="@+id/etConfirmPassWord"
                android:layout_toRightOf="@id/vConfirmPassWord"
                android:hint="@string/password_confirmation"
                android:maxLength="6"
                android:paddingStart="10dp"
                android:background="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout

        android:background="@color/colorPrimaryDark"
        android:id="@+id/rr2"
        android:padding="10dip"
        android:layout_height="@dimen/actionBarSize"
        android:layout_width="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/textNext"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/next"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="20sp"
            android:drawablePadding="7dp"
            android:drawableRight="@drawable/ic_forward_arrow"
            android:textColor="@android:color/white"
            android:drawableTint="@android:color/white"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
