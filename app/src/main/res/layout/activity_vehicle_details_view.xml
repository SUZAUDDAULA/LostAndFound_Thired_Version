                                android:text=":" />


                            <TextView
                                android:id="@+id/tvMadeDate"
                                style="@style/InformationEntryTextView"
                                android:gravity="start"


                                android:hint="@string/madeDate" />
                        </TableRow>

                    </TableLayout>


